    <label for="status" style="margin: 2px;">Status</label>
    <input type="checkbox" name="status" id="status" placeholder="Status" style="margin: 2px;" required>
    <br>
    <button type="submit" id="addProduct" style="margin: 2px;">Add Product</button>
</div>

<div class="products-list">
    <div id="productList">

    </div>
</div>

