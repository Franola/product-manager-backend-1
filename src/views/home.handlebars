<a id="linkCart" href="" hidden>Ver carrito</a>
<h2>Productos</h2>
{{#each products}}
  <div class="product-{{this._id}}">
    <h3><a href="/view/product?id={{this._id}}">{{this.code}} - {{this.title}}</a></h3>
    <ul>
        <li>{{this.description}}</li>
        <li>Precio: ${{this.price}}</li>
        <li>Stock: {{this.stock}}</li>
        <li><button id="{{this._id}}" class="button-addCart">Agregar al carrito</button></li>
    </ul>
  </div>
{{/each}}

